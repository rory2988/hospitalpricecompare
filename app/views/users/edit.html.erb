<%= render 'layouts/header' %>
<body id="edit-user">
  <h2>Update user <%= @user.email %></h2>

  <% unless @update_worked %>
  <div id="errors">
    <h3>Errors!</h3>
    <ul>
      <% @user.errors.messages.each do |field,error| %>
      <li><em><%= "#{field.capitalize} #{error.first}!" %></em></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= render "form" %>
  <%= form_tag user_path(@user), method: "delete" do %>
  <%= submit_tag("Delete My Account", id:"delete-account-button") %>
  <% end %>

  <p><%= link_to "Return to user home.", user_path(@user), id: "return" %></p>
</body>